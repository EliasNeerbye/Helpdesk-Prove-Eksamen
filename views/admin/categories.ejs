<%- include('../layout-start', { title: title, user: user, isAdmin: isAdmin }) %>

<div class="admin-container">
    <div class="admin-header">
        <h2>Manage Categories</h2>
        <div class="admin-actions">
            <button class="btn btn-primary" id="add-category-btn">
                <i class="fas fa-plus"></i> Add Category
            </button>
        </div>
    </div>
    
    <div class="admin-content">
        <div class="category-list-container">
            <div class="loading-spinner" id="categories-loading">
                <div class="spinner"></div>
                <p>Loading categories...</p>
            </div>
            
            <div id="categories-list" style="display: none;">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Tickets</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="categories-body"></tbody>
                </table>
            </div>
            
            <div id="empty-categories" class="empty-state" style="display: none;">
                <i class="fas fa-tags empty-icon"></i>
                <h3>No Categories Found</h3>
                <p>You haven't created any categories yet.</p>
                <button class="btn btn-primary" id="add-first-category-btn">
                    Create your first category
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Category form modal template -->
<template id="category-form-template">
    <form id="category-form" class="modal-form">
        <div class="form-group">
            <label for="category-name">Category Name</label>
            <input type="text" id="category-name" name="name" placeholder="Enter category name" required>
        </div>
        
        <div class="form-group">
            <label for="category-description">Description</label>
            <textarea id="category-description" name="description" placeholder="Enter category description" rows="3"></textarea>
        </div>
        
        <div class="form-actions">
            <button type="button" class="btn btn-secondary" id="cancel-category">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Category</button>
        </div>
    </form>
</template>

<!-- Category row template -->
<template id="category-row-template">
    <tr class="category-row">
        <td class="category-name"></td>
        <td class="category-description"></td>
        <td class="category-tickets-count"></td>
        <td class="category-actions">
            <button class="btn btn-sm btn-secondary edit-category">
                <i class="fas fa-edit"></i>
            </button>
            <button class="btn btn-sm btn-danger delete-category">
                <i class="fas fa-trash"></i>
            </button>
        </td>
    </tr>
</template>

<!-- Delete confirmation modal template -->
<template id="delete-category-confirmation-template">
    <div class="confirmation-content">
        <div class="confirmation-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="confirmation-message">
            <h3>Delete Category</h3>
            <p>Are you sure you want to delete this category? This may affect existing tickets.</p>
        </div>
        <div class="confirmation-actions">
            <button class="btn btn-secondary" id="cancel-delete-category">Cancel</button>
            <button class="btn btn-danger" id="confirm-delete-category">Delete</button>
        </div>
    </div>
</template>

<script src="/js/admin/categories.js"></script>

<%- include('../layout-end') %>