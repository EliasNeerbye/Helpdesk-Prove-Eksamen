<%- include('../layout-start', { title: 'Manage Professions', user: user, isAdmin: isAdmin }) %>

<div class="admin-container">
    <div class="admin-header">
        <h2>Manage Professions</h2>
        <div class="admin-actions">
            <button class="btn btn-primary" id="add-profession-btn">
                <i class="fas fa-plus"></i> Add Profession
            </button>
        </div>
    </div>
    
    <div class="admin-content">
        <div class="profession-list-container">
            <div class="loading-spinner" id="professions-loading">
                <div class="spinner"></div>
                <p>Loading professions...</p>
            </div>
            
            <div id="professions-list" style="display: none;">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="professions-body"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/js/admin/professions.js"></script>

<%- include('../layout-end') %>