<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | HelpDesk</title>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Additional stylesheets can be included here -->
    <% if (typeof extraStyles !== 'undefined') { %>
        <% extraStyles.forEach(function(style) { %>
            <link rel="stylesheet" href="<%= style %>">
        <% }); %>
    <% } %>
</head>
<body>
    <% if (typeof user !== 'undefined') { %>
        <%- include('partials/sidebar', { user: user, isAdmin: isAdmin }) %>
        <div class="main-content">
            <%- include('partials/header', { user: user, title: title }) %>
            <main class="content-wrapper">
                <%- body %>
            </main>
        </div>
    <% } else { %>
        <div class="auth-container">
            <%- body %>
        </div>
    <% } %>

    <!-- Modal container -->
    <div id="modal-container" class="modal-container hidden">
        <div class="modal-overlay"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="modal-title">Modal Title</h2>
                <button id="modal-close" class="modal-close-btn">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div id="modal-body" class="modal-body">
                <!-- Modal content will be inserted here dynamically -->
            </div>
        </div>
    </div>

    <!-- Toast notification container -->
    <div id="toast-container" class="toast-container"></div>

    <!-- Scripts -->
    <script src="/js/main.js"></script>
    <script src="/js/modals.js"></script>
    <!-- Additional scripts can be included here -->
    <% if (typeof extraScripts !== 'undefined') { %>
        <% extraScripts.forEach(function(script) { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
</body>
</html>