<aside class="sidebar">
    <div class="sidebar-header">
        <div class="logo">
            <i class="fas fa-headset"></i>
            <span>HelpDesk</span>
        </div>
    </div>
    
    <nav class="sidebar-nav">
        <ul class="nav-menu">
            <li class="nav-item <%= title === 'Dashboard' ? 'active' : '' %>">
                <a href="/dashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i>
                    <span class="nav-text">Dashboard</span>
                </a>
            </li>
            <li class="nav-item <%= title === 'Tickets' || title === 'Ticket Details' ? 'active' : '' %>">
                <a href="/tickets" class="nav-link">
                    <i class="fas fa-ticket-alt"></i>
                    <span class="nav-text">Tickets</span>
                </a>
            </li>
            <li class="nav-item">
                <button class="nav-link create-ticket-btn" id="create-ticket-btn">
                    <i class="fas fa-plus-circle"></i>
                    <span class="nav-text">New Ticket</span>
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="show-manual-btn">
                    <i class="fas fa-book"></i>
                    <span class="nav-text">User Manual</span>
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="show-faq-btn">
                    <i class="fas fa-question-circle"></i>
                    <span class="nav-text">FAQ</span>
                </button>
            </li>
            <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                <li class="nav-group">
                    <span class="nav-group-title">Admin</span>
                    <ul class="nav-group-items">
                        <li class="nav-item <%= title === 'Manage Users' ? 'active' : '' %>">
                            <a href="/admin/users" class="nav-link">
                                <i class="fas fa-users"></i>
                                <span class="nav-text">Users</span>
                            </a>
                        </li>
                        <li class="nav-item <%= title === 'Manage Categories' ? 'active' : '' %>">
                            <a href="/admin/categories" class="nav-link">
                                <i class="fas fa-tag"></i>
                                <span class="nav-text">Categories</span>
                            </a>
                        </li>
                        <li class="nav-item <%= title === 'Manage Professions' ? 'active' : '' %>">
                            <a href="/admin/professions" class="nav-link">
                                <i class="fas fa-briefcase"></i>
                                <span class="nav-text">Professions</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link" id="stats-button">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-text">Statistics</span>
                            </a>
                        </li>
                    </ul>
                </li>
            <% } %>
        </ul>
    </nav>
    
    <div class="sidebar-footer">
        <div class="user-info">
            <% if (user.profile && user.profile.pfp) { %>
                <img src="/assets/uploads/<%= user.profile.pfp %>" alt="Profile Photo" class="user-avatar">
            <% } else { %>
                <div class="user-avatar default-avatar">
                    <i class="fas fa-user"></i>
                </div>
            <% } %>
            <div class="user-details">
                <span class="user-name">
                    <% if (user.profile && user.profile.firstName) { %>
                        <%= user.profile.firstName %> <%= user.profile.lastName %>
                    <% } else { %>
                        <%= user.email.split('@')[0] %>
                    <% } %>
                </span>
                <span class="user-role">
                    <% if (user.role === 'admin') { %>
                        Administrator
                    <% } else if (user.role === '1st-line') { %>
                        1st Line Support
                    <% } else if (user.role === '2nd-line') { %>
                        2nd Line Support
                    <% } else { %>
                        User
                    <% } %>
                </span>
            </div>
        </div>
        <a href="/profile" class="profile-link">
            <i class="fas fa-cog"></i>
            <span>Profile</span>
        </a>
    </div>
</aside>